<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nút quay lại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_2"
                android:contentDescription="Back"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vé của tôi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Poster và Thông tin phim -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray"
            android:layout_marginTop="16dp">

            <!-- Poster bên trái -->
            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"/>

            <!-- Thông tin phim bên phải -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/tvMovieName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên phim"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày: 23 Tháng 11, 2024 | 16:40 - 18:47"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvCinema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rạp: NTT Cinemas"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvSeatInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rạp 1 - Ghế: K9, K10"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Giá vé, phương thức thanh toán, tổng tiền -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá vé: 269.090 đ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán: Ví điện tử Momo"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng cộng: 269.090 đ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <!-- Lưu ý -->
        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu ý: Phim chỉ dành cho người từ 18 tuổi trở lên. Vui lòng xuất trình giấy tờ tùy thân tại quầy soát vé."
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>
